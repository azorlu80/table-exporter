{
  "name": "table-exporter",
  "version": "1.0.0",
  "description": "Export web tables to CSV/Excel when built-in export fails",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder",
    "build-win": "electron-builder --win --x64",
    "build-linux": "electron-builder --linux",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "table",
    "export",
    "csv",
    "excel",
    "extjs",
    "web-scraping",
    "data-extraction",
    "electron",
    "desktop-app"
  ],
  "author": {
    "name": "Ali",
    "email": "ali@example.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^39.1.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "exceljs": "^4.4.0",
    "winston": "^3.18.3"
  },
  "build": {
    "appId": "com.tablo.exporter",
    "productName": "Tablo Exporter",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "index.html",
      "package.json"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "win": {
      "target": [
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    }
  }
}
